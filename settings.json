{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/auto-route-query.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/enforce-grep-context.sh",
            "timeout": 60
          },
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/use-project-index.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/search-cache-check.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Search",
        "hooks": [
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/enforce-grep-context.sh",
            "timeout": 60
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/limit-large-reads.sh",
            "timeout": 60
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/track-usage.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "/home/mike/.claude/hooks/search-cache-store.sh",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true
}
